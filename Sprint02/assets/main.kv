Screen:
    BoxLayout:
        orientation: 'vertical'

        # Top box with image background
        BoxLayout:
            id: top_box
            orientation: 'horizontal'
            size_hint: 1, 0.2
            padding: 10
            spacing: 10

            canvas.before:
                Rectangle:
                    source: 'images/Food-bg.jpg'
                    size: self.size
                    pos: self.pos

            MDIcon:
                icon: 'food-fork-drink'
                halign: 'center'
                theme_text_color: "Custom"
                text_color: (0.2, 0.1, 0, 1)  # Dark Brown color
                size_hint: None, None
                size: 48, 48  # Adjust size as needed

            MDLabel:
                text: 'Quick Eats'
                halign: 'center'
                theme_text_color: "Custom"
                text_color: (0.2, 0.1, 0, 1)  # Dark Brown color
                font_style: 'H4'

        # Button box
        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.8, 0.4
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            padding: 10
            spacing: 10

            MDFlatButton:
                text: 'Enter Admin'
                pos_hint: {'center_x': 0.5}
                on_release: app.enter_admin_role(self)
                theme_text_color: "Custom"
                text_color: (0.5, 0.25, 0, 1)  # Brown color

            MDFlatButton:
                text: 'Enter Customer'
                pos_hint: {'center_x': 0.5}
                on_release: app.enter_customer_role(self)
                theme_text_color: "Custom"
                text_color: (0.5, 0.25, 0, 1)  # Brown color